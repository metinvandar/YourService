<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_popular_list_item"
        android:layout_width="160dp"
        android:layout_height="120dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_vew_popular_list_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/wedding" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/text_view_popular_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/card_view_popular_list_item"
        app:layout_constraintStart_toStartOf="@+id/card_view_popular_list_item"
        app:layout_constraintTop_toBottomOf="@+id/card_view_popular_list_item"
        tools:text="Dikenli tel" />

</androidx.constraintlayout.widget.ConstraintLayout>